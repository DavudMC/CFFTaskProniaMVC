
@model ProductUpdateVM
<div class="container">
    <div class="row">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Name">Name</label>
                <input asp-for="Name" class="form-control" id="Name" placeholder="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <input asp-for="Description" class="form-control" id="Description" placeholder="Description">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label for="Price">Price</label>
                <input asp-for="Price" class="form-control" id="Price" placeholder="Price">
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="MainImagePath" />
                <img src="~/assets/images/website-images/@Model.MainImagePath" width="50" heigth="50" alt="Alternate Text" />
                <label for="MainImage">MainImage</label>
                <input asp-for="MainImage" class="form-control" id="MainImage" placeholder="MainImage">
                <span class="text-danger" asp-validation-for="MainImage"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="HoverImagePath" />
                <img src="~/assets/images/website-images/@Model.HoverImagePath" width="50" heigth="50" alt="Alternate Text" />
                <label for="HoverImage">HoverImage</label>
                <input asp-for="HoverImage" class="form-control" id="HoverImage" placeholder="HoverImage">
                <span class="text-danger" asp-validation-for="HoverImage"></span>
            </div>
            <div class="form-group">
                <label for="Images">Images</label>
                <input asp-for="Images" class="form-control" id="Images" placeholder="Images">
                <span class="text-danger" asp-validation-for="Images"></span>
            </div>
            <div class="form-group">
                <label for="Rating">Rating</label>
                <input asp-for="Rating" class="form-control" id="Rating" placeholder="Rating">
                <span class="text-danger" asp-validation-for="Rating"></span>
            </div>
            <div class="form-group">
                <label for="CategoryId">CategoryId</label>
                <select asp-for="CategoryId" id="CategoryId">
                    <option value="null" disabled selected>Category Secin</option>
                    @foreach (Category category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="CategoryId"></span>
            </div>
            <div class="form-group">
                <label for="TagIds">TagId</label>
                <select asp-for="TagIds" id="TagIds">
                    
                    @foreach (Tag tag in ViewBag.Tags)
                    {
                        <option value="@tag.Id">@tag.Name</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="CategoryId"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>





